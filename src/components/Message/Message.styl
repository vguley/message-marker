item()
  position relative
  width calc(100% - 50px)
  margin-right 50px

box()
  position relative
  margin-bottom 10px

  .text
    display block
    background #ebebeb
    min-width 20px
    width -moz-fit-content
    width fit-content
    min-height 65px
    padding 35px
    margin-top 15px
    font-size 45px
    color var(--text-color)
    border-radius 0 25px 25px 25px
    word-break break-word
    box-shadow -2px 4px #9d9f9f

option()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  width 100%
  height 90px
  box-sizing border-box
  padding 5px 30px
  font-size 40px
  font-weight bold
  text-align center
  color var(--text-color)
  background var(--option-background-color)
  border 2px solid var(--border-hover-color)
  box-shadow 2px 2px 10px var(--border-hover-color)
