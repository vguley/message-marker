:root
  --text-color #040406
  --title-color #121212
  --info-color #6a6a6a
  --notice-color #949595
  --message-text-hover-color var(--text-color)
  --message-icon-hover-color #050505
  --message-item-name-color #6b6b6b
  --message-item-background-color #dddddd
  --message-item-img-width 280px
  --menu-text-color #afaeb3
  --menu-icon-background-color #e3e3e3
  --menu-btn-hover #e4d89b
  --border-color #595556
  --border-hover-color #b5b5b5
  --box-background-color #d8d8d8

  --menu-border 5px solid var(--border-color)
  --menu-border-hover 5px solid var(--border-hover-color)
  --menu-border-highlight 5px solid #f3f4f6

html
  scrollbar-width none

  &::-webkit-scrollbar
    width 0
    height 0

body
  margin 0
  font-family Microsoft Yahei

img
  user-drag none
  -webkit-user-drag none

::-webkit-scrollbar
  width 10px
  height 10px

::-webkit-scrollbar-track
  background #c6c6c6

::-webkit-scrollbar-thumb
  background #545454

#app
  overflow hidden
  width 100vw
  height 100vh
  display flex
  justify-content center
  align-items center

.del
  transition opacity 0.2s
  user-select none

.fade-enter-active, .fade-leave-active
  transition all 0.2s

.fade-enter-from, .fade-leave-to
  opacity 0

.fade-enter-to, .fade-leave-from
  opacity 1

@keyframes rotate
  from
    transform rotate(0deg)
  to
    transform rotate(-360deg)
